{% extends 'pages/base.jinja' %}

{% block title %}

    Flask and Turso DB Demo

{% endblock %}

{% block content %}

    <h1>Flask and Turso Demo</h1>

    <section id="todo-list">

        {%for thing in todo%}
            <article class="todo-item">
            <p>Priority: <strong>{{ todo.priority }}</strong></p>
                <h2><a href="/thing/{{ todo.id }}">{{ todo.thing_to_do }}</a></h2>
            </article>
        {% endfor %}

    </section>

{% endblock %}